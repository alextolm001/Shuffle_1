# ðŸ”¹ Basis: officiÃ«le Python 3.8 image met Debian Bullseye 
FROM python:3.8-bullseye

# ðŸ”¹ Metadata
LABEL maintainer="alextolm001@gmail.com" \
      version="1.1" \
      description="Shuffle_1 container voor Eurovision stemverwerking (periodiek)"

# ðŸ”¹ Systeemafhankelijkheden: Java en Git voor PySpark + repo-kloon
RUN apt-get update && apt-get install -y --no-install-recommends \
    openjdk-11-jdk \
    git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# ðŸ”¹ Zet Java-omgeving
ENV JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
ENV PATH="${JAVA_HOME}/bin:${PATH}"

# ðŸ”¹ Werkdirectory
WORKDIR /app

# ðŸ”¹ Installeer Python-pakketten
RUN pip install --no-cache-dir \
    pyspark \
    google-api-python-client \
    google-auth \
    google-auth-httplib2 \
    google-auth-oauthlib

# ðŸ”¹ Clone repo met je stemverwerkingsscripten
RUN git clone https://github.com/alextolm001/Shuffle_1.git /app/code

# ðŸ”¹ Kopieer benodigde scripts
RUN cp /app/code/count_votes.py . && cp /app/code/loop_runner.py .

# ðŸ”¹ Start het loopscript dat elke 3 minuten runt
CMD ["python", "loop_runner.py"]

